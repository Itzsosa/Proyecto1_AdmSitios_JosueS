---
import '../styles/global.css';

interface Props {
	title: string;
	showNavigation?: boolean;
}

const { title, showNavigation = true } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Sistema de Tickets</title>
		<!-- Add Font Awesome for icons -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
	</head>
	<body class="bg-gray-100 min-h-screen">
		{showNavigation && (
			<nav class="bg-blue-600 text-white p-4 shadow-md">
				<div class="container mx-auto flex justify-between items-center">
					<div class="font-bold text-xl">Sistema de Tickets</div>
					<div class="hidden md:flex space-x-4">
						<a href="/" class={`hover:text-blue-200 ${currentPath === '/' ? 'text-white font-bold' : 'text-blue-100'}`}>Inicio</a>
						<a href="/register" class={`hover:text-blue-200 ${currentPath === '/register' ? 'text-white font-bold' : 'text-blue-100'}`}>Registro</a>
						<a href="/login" class={`hover:text-blue-200 ${currentPath === '/login' ? 'text-white font-bold' : 'text-blue-100'}`}>Iniciar Sesi贸n</a>
						<button id="logout-btn" class="hover:text-blue-200 hidden">Cerrar Sesi贸n</button>
					</div>
					<div class="md:hidden">
						<button id="mobile-menu-btn" class="text-white">
							<i class="fas fa-bars"></i>
						</button>
					</div>
				</div>
				<div id="mobile-menu" class="hidden md:hidden">
					<div class="flex flex-col space-y-2 mt-2 px-4 pb-3">
						<a href="/" class={`hover:text-blue-200 ${currentPath === '/' ? 'text-white font-bold' : 'text-blue-100'}`}>Inicio</a>
						<a href="/register" class={`hover:text-blue-200 ${currentPath === '/register' ? 'text-white font-bold' : 'text-blue-100'}`}>Registro</a>
						<a href="/login" class={`hover:text-blue-200 ${currentPath === '/login' ? 'text-white font-bold' : 'text-blue-100'}`}>Iniciar Sesi贸n</a>
						<button id="mobile-logout-btn" class="hover:text-blue-200 text-left hidden">Cerrar Sesi贸n</button>
					</div>
				</div>
			</nav>
		)}
		<main class="container mx-auto p-4">
			<slot />
		</main>
		<script>
			// Check if user is logged in
			document.addEventListener('DOMContentLoaded', () => {
				const currentUser = localStorage.getItem('currentUser');
				
				if (currentUser) {
					const user = JSON.parse(currentUser);
					document.querySelectorAll('#logout-btn, #mobile-logout-btn').forEach(el => {
						el.classList.remove('hidden');
						el.addEventListener('click', () => {
							localStorage.removeItem('currentUser');
							window.location.href = '/login';
						});
					});
					
					// Hide login/register links when logged in
					document.querySelectorAll('a[href="/login"], a[href="/register"]').forEach(el => {
						el.classList.add('hidden');
					});
				}
				
				// Mobile menu toggle
				const mobileMenuBtn = document.getElementById('mobile-menu-btn');
				const mobileMenu = document.getElementById('mobile-menu');
				
				if (mobileMenuBtn && mobileMenu) {
					mobileMenuBtn.addEventListener('click', () => {
						mobileMenu.classList.toggle('hidden');
					});
				}
			});
		</script>
	</body>
</html>
